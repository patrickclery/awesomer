#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# Prepare database on first run (create and migrate if needed)
# This runs for all commands to ensure database is ready
if [ "$RAILS_ENV" = "production" ]; then
    echo "Preparing database..."
    ./bin/rails db:prepare 2>/dev/null || {
        echo "Database preparation failed, attempting create and migrate..."
        ./bin/rails db:create db:migrate 2>/dev/null || true
    }
fi

exec "${@}"
