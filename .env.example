# Awesomer Docker Environment Variables
# Copy this file to .env and fill in the values

# ===================
# Required Variables
# ===================

# GitHub API token for fetching repository stats (stars, forks, etc.)
# Create at: https://github.com/settings/tokens
# Required scopes: public_repo (read)
GITHUB_API_KEY=ghp_your_github_api_key_here

# GitHub access token for pushing commits to publish repository
# Can be the same as GITHUB_API_KEY if it has write access
# Required for: bin/awesomer publish
GITHUB_ACCESS_TOKEN=ghp_your_github_access_token_here

# ===================
# Publishing Config
# ===================

# Target repository for publishing generated awesome lists
# Default: patrickclery/awesomer-test (for testing)
# Production: patrickclery/awesomer
PUBLISH_REPO=patrickclery/awesomer-test

# ===================
# Database Config
# ===================

# PostgreSQL credentials (defaults work with docker-compose)
DATABASE_USERNAME=awesomer
DATABASE_PASSWORD=awesomer_password

# ===================
# Rails Config
# ===================

# Secret key for Rails (generate with: rails secret)
# Required for production environment
SECRET_KEY_BASE=generate_with_rails_secret_or_openssl_rand_hex_64

# ===================
# Optional Variables
# ===================

# Redis URL (default works with docker-compose)
# REDIS_URL=redis://redis:6379/0

# Rails max threads / connection pool size
# RAILS_MAX_THREADS=5
