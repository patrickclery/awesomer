# Awesomer Platform Environment Variables

# GitHub API token (required for sync pipeline)
GITHUB_API_KEY=ghp_your_token_here

# Database (used by Docker Compose - change for production)
POSTGRES_USER=awesomer
POSTGRES_PASSWORD=awesomer
POSTGRES_DB=awesomer_platform

# API
DATABASE_URL=postgresql://awesomer:awesomer@postgres:5432/awesomer_platform
REDIS_URL=redis://redis:6379

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:4000/api

# Listmonk
LISTMONK_ADMIN_USER=admin
LISTMONK_ADMIN_PASSWORD=admin
